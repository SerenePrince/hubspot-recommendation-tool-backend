# =========================
# Server
# =========================
PORT=3001
NODE_ENV=development

# =========================
# Vendor Data Location
# =========================
# Path to WebAppAnalyzer source dataset
DATA_ROOT=./data/vendor/webappanalyzer/src

# =========================
# Fetch Limits & Safety
# =========================
FETCH_TIMEOUT_MS=12000
MAX_FETCH_BYTES=2000000

# =========================
# HTTP / API behavior
# =========================
# Enable structured request logging (1 = on, 0 = off)
REQUEST_LOG=0

# Allowed CORS origin (default: *)
CORS_ALLOW_ORIGIN=*

# =========================
# Smoke Test (scripts only)
# =========================
# Base URL to run smoke tests against the API
# SMOKE_BASE_URL=http://localhost:3001

# Target URL for smoke tests (fallbacks apply)
SMOKE_URL=https://react.dev/

# =========================
# Future / reserved (not active)
# =========================
# TECHDB_CACHE=1
# CACHE_TTL_MS=600000
# LOG_LEVEL=info
